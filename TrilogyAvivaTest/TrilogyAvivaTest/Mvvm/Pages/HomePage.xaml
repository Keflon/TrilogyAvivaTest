<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:pageviewmodels="clr-namespace:TrilogyAvivaTest.Mvvm.PageViewModels"
             x:Class="TrilogyAvivaTest.Mvvm.Pages.HomePage"

             >
    <!--x:DataType="pageviewmodels:HomePageVm"-->
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Please Enter City Name" />
            <Entry Text="{Binding CityName}" Placeholder="{Binding CityNamePlaceholder}"/>
            <Button Text="{Binding GetCityWeatherCommand.Text}" Command="{Binding GetCityWeatherCommand}"/>

            <StackLayout BindableLayout.ItemsSource="{Binding CityWeather.Weather}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate >
                        <Label Text="{Binding Description}"/>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>

            <Label Text="{Binding WeatherDescription}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>